{
  "name": "copyarchive",
  "version": "1.0.0",
  "description": "CopyArchive - A modern clipboard manager built with Electron.",
  "main": "main.js",
  "author": {
    "name": "Rajat Yadav",
    "email": "rajat.yadav.cse@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.copyarchive.app",
    "productName": "CopyArchive",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/",
      "!build/",
      "!node_modules/.cache",
      "!debian.json",
      "!redhat.json",
      "!build.js"
    ]
    ,
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "assets/icon_Linux.png",
      "category": "Utility",
      "maintainer": "Rajat Yadav <rajat.yadav.cse@gmail.com>"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {}
}
